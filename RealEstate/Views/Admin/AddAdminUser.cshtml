@model UserViewModel
@{
    ViewData["Title"] = "AddAdminUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_MenuBar" />
<div class="content-bg mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header top-header">
                    <div class="col-lg-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="m-b-0 text-white">Add Admin User</h4>
                            <a asp-action="AdminUser" asp-controller="Admin" class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp;Back</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="AddAdminUser" method="post" role="form">
                        <div class="form-body">
                            <div class="form-row m-3">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Full Name:</label>
                                    <input type="text" asp-for="FullName" placeholder="Enter Full Name" class="form-control" style="width:80%" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">Email Address:</label>
                                    <input type="text" asp-for="EmailAddress" placeholder="Enter Email Address" class="form-control" style="width:80%" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row m-3">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Password:</label>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" style="width:80%" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="form-checkbox-group">
                                        <input type="checkbox" asp-for="Status" value="true" id="IsActive">
                                        <label for="IsActive"> Is Active </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="form-row m-3">
                                <div class="form-group col-md-6">
                                    <input type="submit" value="Submit" name="AddAdminUser" class="btn btn-success" />
                                    <a asp-action="AdminUser" asp-controller="Admin" title="Click here to get List" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

