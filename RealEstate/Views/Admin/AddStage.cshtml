@model StageViewModel
@{
    ViewData["Title"] = "AddStage";
}

<partial name="_MenuBar" />
<div class="content-bg mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header top-header">
                    <div class="col-lg-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="m-b-0 text-white">Add Stage</h4>
                            <a asp-action="Stage" asp-controller="Admin" class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp;Back</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="AddStage" method="post" role="form">
                        <div class="form-body">
                            <div class="form-row m-3">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Stage Name:</label>
                                    <input type="text" asp-for="StageName" placeholder="Stage Name" class="form-control" style="width:80%" />
                                    <span asp-validation-for="StageName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="form-row m-3">
                                <div class="form-group col-md-6">
                                    <input type="submit" value="Submit" name="AddStage" class="btn btn-success" />
                                    <a asp-action="Stage" asp-controller="Admin" title="Click here to get List" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>