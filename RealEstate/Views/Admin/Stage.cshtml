@model IEnumerable<StageViewModel>
@{
    ViewData["Title"] = "Stage";
}

<div role="alert" id="divAlertMessage" style="display:none"></div>
<div class="alert alert-success" id="SuccessMsg" role="alert" style="display:none;"></div>
<div class="alert alert-danger" id="ErrorMsg" role="alert" style="display:none;"></div>

<div class="modal fade" id="divEditStage" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Update Stage</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div role="alert" id="divErrorMsgStage" style="display:none"></div>
                <input type="hidden" id="hdnCompanyId" />
                <input type="hidden" id="hdnStageId" />
                <label>Stage Name:</label><input type="text" id="txtStageName" class="form-control" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="fnUpdateStageDetails()" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<partial name="_MenuBar" />

<div class="content-bg mt-3">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header top-header">
                    <div class="col-lg-12">
                        @*<div class="d-flex justify-content-between align-items-center">
                            <h4 class="m-b-0 text-white">Stage</h4>
                        </div>*@
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="m-b-0 text-white">Stage</h4>
                            <a asp-action="AddStage" class="btn btn-primary mr-2">+ Add Stage</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-all-people" role="tabpanel"
                             aria-labelledby="pills-all-people-tab">
                            <div class="custom-card-text">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count() > 0)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.StageName</td>
                                                    <td>
                                                        @*<button onclick="return ConfirmationDialog(@item.AgentId)" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>*@
                                                        <b>
                                                            <a onclick="fnPopulateControls(@item.StageId)" style="color:#007bff" title="Click to edit record.">
                                                                Edit
                                                            </a>
                                                        </b>|
                                                        <b><a onclick="return ConfirmationDialog(@item.StageId)" style="color:#dc3545" title="Click to delete record.">Delete </a></b>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5"><h5>No Stage Found.</h5></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/SiteJavascripts/StageList.js"></script>