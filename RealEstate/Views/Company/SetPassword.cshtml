@model SetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta http-equiv="Content-Type" content="application/x-font-woff; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Estajo - SetPassword</title>
    <!-- Favicon -->
    <!-- <link rel="icon" href="assets/images/favicon.png" /> -->
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!--Style CSS-->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="container">
            <div class="logo-wrapper">
                <img class="logo-img" src="/image/logo.png" alt="" />
            </div>
            <form role="form" method="post">
                <div class="login-form mb-4">
                    <div class="alert alert-danger" id="ErrorMsg" role="alert" style="display:none;"></div>
                    <div class="alert alert-success" id="SuccessMsg" role="alert" style="display:none;"></div>

                    <input type="hidden" value="@TempData["EmailAddress"]" asp-for="EmailAddress" id="txtEmailForSetPassword" />
                    <label>Create Password For <b>@TempData["EmailAddress"]</b> account</label>
                    <input asp-for="Password" class="custom-input" placeholder="Please Enter Password" id="txtPasswordForSetPassword">
                    <span asp-validation-for="Password" class="text-danger"></span>


                    <div class="forgot-password-link-wrapper mt-3">
                        <input asp-for="ConfirmPassword" class="custom-input" placeholder="Please Enter Confirm Password" id="txtConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>


                    <div class="row align-items-center">
                        <div class="col-6 text-left mt-3">
                            <input type="submit" class="btn btn-primary" onclick="fnSaveCookie()" name="SetPassword" value="Submit">
                            <a class="btn btn-info" name="Login" asp-action="Login" asp-controller="Account">Cancel</a>
                        </div>
                        <div class="col-8 text-right mt-3">
                            <div class="form-checkbox-group">
                                <input type="checkbox" asp-for="KeepMeSigninIn" value="true" id="chkLogingIn">
                                <label for="chkLogingIn">Keep Me Loging In!</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <footer>
        <div class="container-fluid">
            <div class="row align">
                <div class="col-12 col-sm-4 order-sm-1 order-2">
                    <div class="copyright-text">
                        <a href="#">
                            &copy; @DateTime.Now.Year - Estajo
                        </a>
                    </div>
                </div>
                <div class="col-12 col-sm-8 order-sm-2 order-1">
                    <ul>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Terms &amp; Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
<!-- Optional JavaScript -->
